body
  margin 0
  padding 0
  font-family arial


@media all and (min-width: 960px)
  .flex
    display flex
    flex-direction row
    justify-content flex-start
    align-items flex-start
  nav
    min-width 250px

  main
    flex-grow 1
    background pink

nav
  background #eee
  padding 1rem 0
  li
    line-height 1.5rem
    &.active
      font-weight bold
    .date
      display none

main
  margin-left 1rem
  margin-right 1rem

footer
  margin-top 2rem
  padding 2ex 1em
  border-top 1px solid #ccc
  background #f2f2f2

  ol, ol li
    padding-left 0
    margin-left 1ex
    max-width 30rem

img
  max-width 100vw
  margin-left -1rem

h1, h2
  font-weight normal

sup
  font-size .5em

.update
  margin-top 2em
  text-align right
  font-family monospace
  font-size .8em

.cite-backlink
  a
    font-family sans-serif
    font-size .8em
    text-decoration none
    background none
